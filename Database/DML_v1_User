-- Insert User Roles (using actual IDs after insertion)
-- Get the actual IDs that were created
DECLARE @AdminRoleId BIGINT, @UserRoleId BIGINT;
DECLARE @AdminUserId BIGINT, @ToleUserId BIGINT, @TechguruUserId BIGINT, @Gamer123UserId BIGINT, @PcbuilderUserId BIGINT, @Reviewer99UserId BIGINT, @TechfanUserId BIGINT;

SELECT @AdminRoleId = Id FROM Roles WHERE Name = 'Administrator';
SELECT @UserRoleId = Id FROM Roles WHERE Name = 'User';

SELECT @AdminUserId = Id FROM Users WHERE Username = 'admin';
SELECT @ToleUserId = Id FROM Users WHERE Username = 'tole';
SELECT @TechguruUserId = Id FROM Users WHERE Username = 'techguru';
SELECT @Gamer123UserId = Id FROM Users WHERE Username = 'gamer123';
SELECT @PcbuilderUserId = Id FROM Users WHERE Username = 'pcbuilder';
SELECT @Reviewer99UserId = Id FROM Users WHERE Username = 'reviewer99';
SELECT @TechfanUserId = Id FROM Users WHERE Username = 'techfan';

INSERT INTO UserRoles (UserId, RoleId) VALUES
(@AdminUserId, @AdminRoleId), -- admin - Administrator role
(@ToleUserId, @AdminRoleId), -- tole - Administrator role  
(@TechguruUserId, @UserRoleId), -- techguru - User role
(@Gamer123UserId, @UserRoleId), -- gamer123 - User role
(@PcbuilderUserId, @UserRoleId), -- pcbuilder - User role
(@Reviewer99UserId, @UserRoleId), -- reviewer99 - User role
(@TechfanUserId, @UserRoleId); -- techfan - User role
