@page
@model RazorBookStore.Pages.Book.IndexModel
@{
    ViewData["Title"] = "Book List";
}

<a asp-page="Create" class="btn btn-primary" mb-2>Create New Book</a>

<div class="card-shadow mt-2">
    <div class="card-header">
       <h3>@ViewData["Title"]</h3>
    </div>
    <div class="card-body">
    <table class="table table-striped table-hover table-responsive">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Author</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if(Model.Books != null && Model.Books.Any()){
            @foreach (var book in Model.Books)
            {
                <tr>
                    <td>@book.Id</td>
                    <td>@book.Title</td>
                    <td>@book.Descripton</td>
                    <td>@book.Author</td>
                    <td>@book.Price.ToString("C")</td>
                    <td class="d-flex gap-1">
                                <a asp-page="./Edit" asp-route-id="@book.Id" class="btn btn-warning btn-sm me-1">Edit</a>
                        <form method="post" asp-page-handler="Delete" asp-route-id="@book.Id"
                            onsubmit="return confirm('Are you sure you want to delete this ?')"
                            class="d-inline m-0"
                        >   
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            }
            }
            else {
                <tr>
                    <td colspan="5">
                        No books are availabe at the moment.
                    </td>
                </tr>
            }
        </tbody>
    </table>

    </div>
</div>
