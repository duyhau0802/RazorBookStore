@page
@model RazorBookStore.Pages.Book.CreateModel
@{
    ViewData["Title"] = "Create Book";
}

<div class="card shadow">
    <div class="card-header">
        <h3>@ViewData["Title"]</h3>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-6">
                <form method="post">
                    <div class="form-group">
                        <label asp-for="Books.Title" class="control-label"></label>
                        <input asp-for="Books.Title" class="form-control"/>
                        <span asp-validation-for="Books.Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Books.Descripton" class="control-label"></label>
                        <input asp-for="Books.Descripton" class="form-control" />
                        <span asp-validation-for="Books.Descripton" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Books.Author" class="control-label"></label>
                        <input asp-for="Books.Author" class="form-control" />
                        <span asp-validation-for="Books.Author" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Books.Price" class="control-label"></label>
                        <input asp-for="Books.Price" class="form-control" type="number" step="0.01" />
                        <span asp-validation-for="Books.Price" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-2">
                        <button type="submit" class="btn btn-primary">Submit</button>
                        <a asp-page="Index" class="btn btn-success">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
