@page
@model RazorBookStore.Pages.DashboardModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3>@ViewData["Title"]</h3>
                    <span>
                        @if (Model.IsAuthenticated)
                        {
                            @:Welcome, @User.Identity?.Name!
                        }
                        else
                        {
                            @:Welcome, Guest!
                        }
                    </span>
                </div>
                <div class="card-body">
                    @if (Model.IsAuthenticated)
                    {
                        <div class="row">
                            <div class="col-md-6">
                                <h5>User Information</h5>
                                <p><strong>User ID:</strong> @Model.UserId</p>
                                <p><strong>Username:</strong> @User.Identity?.Name</p>
                                <p><strong>Email:</strong> @User.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value</p>
                                <p><strong>Full Name:</strong> @User.FindFirst("FullName")?.Value</p>
                                <p><strong>Roles:</strong> @string.Join(", ", User.FindAll(System.Security.Claims.ClaimTypes.Role).Select(r => r.Value))</p>
                            </div>
                            <div class="col-md-6">
                                <h5>Session Data</h5>
                                <p><strong>Login Time:</strong> @Model.LoginTime</p>
                                <p><strong>Session ID:</strong> @Model.SessionId</p>
                                <p><strong>Cache Test:</strong> @Model.CacheValue</p>
                            </div>
                        </div>
                        
                        <div class="mt-3">
                            <a href="/Account/Logout" class="btn btn-danger">Logout</a>
                            <a href="/User" class="btn btn-primary">Manage Users</a>
                        </div>
                    }
                    else
                    {
                        <div class="text-center">
                            <h4>Welcome to Dashboard</h4>
                            <p>Please login to see personalized information and manage your account.</p>
                            
                            <div class="row mt-4">
                                <div class="col-md-6">
                                    <h5>Session Information</h5>
                                    <p><strong>Session ID:</strong> @Model.SessionId</p>
                                    <p><strong>Cache Test:</strong> @Model.CacheValue</p>
                                </div>
                                <div class="col-md-6">
                                    <h5>Available Actions</h5>
                                    <a href="/Account/Login" class="btn btn-primary btn-block mb-2">Login</a>
                                    <a href="/User" class="btn btn-secondary btn-block">View Users</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
