@page
@model RazorBookStore.Pages.User.IndexModel
@{
    ViewData["Title"] = "User List";
}

<a asp-page="Create" class="btn btn-primary" mb-2>Create New User</a>

<div class="card-shadow mt-2">
    <div class="card-header">
        <h3>@ViewData["Title"]</h3>
    </div>
    <div class="card-body">
        <table class="table table-striped table-hover table-responsive">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Users[0].Id)</th>
                    <th>@Html.DisplayNameFor(model => model.Users[0].Username)</th>
                    <th>@Html.DisplayNameFor(model => model.Users[0].Email)</th>
                    <th>@Html.DisplayNameFor(model => model.Users[0].PasswordHash)</th>
                    <th>@Html.DisplayNameFor(model => model.Users[0].FullName)</th>
                    <th>@Html.DisplayNameFor(model => model.Users[0].PhoneNumber)</th>
                    <th>@Html.DisplayNameFor(model => model.Users[0].Status)</th>
                    <th>User Roles</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Users != null && Model.Users.Any())
                {
                    @foreach (var user in Model.Users)
                    {
                        <tr>
                            <td>@user.Id</td>
                            <td>@user.Username</td>
                            <td>@user.Email</td>
                            <td title="Password is hashed for security">
                                @if (!string.IsNullOrEmpty(user.PasswordHash))
                                {
                                    <span>***</span>
                                }
                                else
                                {
                                    <span class="text-muted">No password</span>
                                }
                            </td>
                            <td>@user.FullName</td>
                            <td>@user.PhoneNumber</td>
                            <td>@user.Status</td>
                            <td>@(user.UserRoles?.Any() == true ? string.Join(", ", user.UserRoles.Select(ur => ur.Role?.Name ?? "")) : "No roles")</td>
                            <td class="d-flex gap-1 w-100">
                                <a asp-page="./Edit" asp-route-id="@user.Id" class="btn btn-warning btn-sm flex-fill">Edit</a>
                                <form method="post" asp-page-handler="Delete" asp-route-id="@user.Id"
                                      onsubmit="return confirm('Are you sure you want to delete this ?')"
                                      class="d-inline flex-fill">
                                    <button type="submit" class="btn btn-danger btn-sm w-100">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="9">
                            No users are available at the moment.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>